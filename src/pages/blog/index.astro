---
import Layout from '@layouts/Layout.astro';
import PageHeader from '@components/structure/PageHeader.astro';
import SectionArticles from '@components/structure/SectionArticles.astro';
import SectionFeatured from '@components/structure/SectionFeatured.astro';

const {
  title = 'Blog',
  description = 'Latest posts and updates.',
} = Astro.props;
---

<Layout title={title} description={description}>
  <PageHeader title={title} />
  <SectionArticles />
  <SectionFeatured />
</Layout>