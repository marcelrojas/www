---
const { type = '1', ...attrs } = Astro.props;
---
{type === '1' && <h1 {...attrs}><slot /></h1>}
{type === '2' && <h2 {...attrs}><slot /></h2>}
{type === '3' && <h3 {...attrs}><slot /></h3>}
{type === '4' && <h4 {...attrs}><slot /></h4>}
{type === '5' && <h5 {...attrs}><slot /></h5>}
{type === '6' && <h6 {...attrs}><slot /></h6>}
<style>
  h1 {
    line-height: 3.125rem;
    font-weight: var(--font-weight-light);
    letter-spacing: 0;
  }
  h2 {
    line-height: 3.125rem;
    font-weight: var(--font-weight-semibold);
    letter-spacing: 0;
  }
  h3 {
    line-height: 1.75rem;
    font-weight: var(--font-weight-regular);
    letter-spacing: 0;
  }
  h4 {
    line-height: 2.25rem;
    font-weight: var(--font-weight-regular);
    letter-spacing: 0;
  }
  h5 {
    line-height: 2.5rem;
    font-weight: var(--font-weight-regular);
    letter-spacing: 0;
  }
  h6 {
    font-size: var(--font-size-32);
    line-height: 2.25rem;
    font-weight: var(--font-weight-semibold);
    letter-spacing: 0;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-family-sans);
    font-feature-settings: 'ss07', 'ss08';
    color: var(--color-text-primary)
  }
  :is(h1, h2, h3, h4, h5, h6)+* {
    margin-top: .8em
  }
  :is(h2, h3, h4, h5) > :is(+h3, +h4, +h5, +h6) {
    margin-bottom: var(--spacing-fluid-12)
  }
  @container (max-width:734px) {
    h1 {
      font-size: var(--font-size-42)
    }
    h2 {
      font-size: var(--font-size-42)
    }
    h3 {
      font-size: var(--font-size-20)
    }
    h4 {
      font-size: var(--font-size-28)
    }
    h5 {
      font-size: var(--font-size-32)
    }
    h6 {
      font-size: var(--font-size-32)
    }
  }
  @container (min-width:734px) {
    h1 {
      font-size: var(--font-size-42)
    }
    h2 {
      font-size: var(--font-size-42)
    }
    h3 {
      font-size: var(--font-size-20)
    }
    h4 {
      font-size: var(--font-size-28)
    }
    h5 {
      font-size: var(--font-size-32)
    }
    h6 {
      font-size: var(--font-size-32)
    }
  }
  @container (min-width:1068px) {
    h1 {
      font-size: var(--font-size-42)
    }
    h2 {
      font-size: var(--font-size-42)
    }
    h3 {
      font-size: var(--font-size-20)
    }
    h4 {
      font-size: var(--font-size-28)
    }
    h5 {
      font-size: var(--font-size-32)
    }
    h6 {
      font-size: var(--font-size-32)
    }
  }
</style>