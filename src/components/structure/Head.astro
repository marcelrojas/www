---
import { ClientRouter } from 'astro:transitions';
import { SITE_TITLE } from '@types/consts';
// Estilos aquí para que Astro/Vite los procese y optimice automáticamente
import '@styles/variables.css';
import '@styles/global.css';

// Tipado más robusto para imágenes (soporta importación local o URL externa)
import type { ImageMetadata } from 'astro';
import FallbackImage from '/public/og.png';
import Schema from '@components/Schema.astro';

interface Props {
  title: string;
  description: string;
  image?: ImageMetadata | string; // Permite strings para URLs externas si fuera necesario
}

const { title, description, image = FallbackImage } = Astro.props;

// Lógica de URL Canónica: Elimina barras finales para consistencia SEO
const canonicalURL = new URL(Astro.url.pathname.replace(/\/$/, ''), Astro.site);

// Lógica para la imagen OG (Open Graph)
// Si es una imagen local (ImageMetadata), usa .src; si es string, úsalo directo.
const imageSrc = typeof image === 'string' ? image : image.src;
const ogImageURL = new URL(imageSrc, Astro.site);
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
  <title>{title}</title>
  <meta name="title" content={title} />
  <meta name="description" content={description} />
  <meta name="generator" content={Astro.generator} />
  <!-- Preload Fonts -->
  <link rel="preload" href="/fonts/InterVariable.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
  <link rel="preload" href="/fonts/TrajanPro-Regular.ttf" as="font" type="font/ttf" crossorigin="anonymous" />
  <link rel="preload" href="/fonts/GeistMono.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalURL} />

  <link rel="icon" type="image/svg+xml" sizes="any" href="/favicon.svg" />
  <link rel="icon" type="image/x-icon" sizes="any" href="/favicon.ico" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.svg" />
  <link rel="manifest" href="/manifest.webmanifest" crossorigin="anonymous" />
  <meta name="theme-color" content="#000000" />

  <link rel="sitemap" href="/sitemap-index.xml" />
  <link rel="alternate" type="application/rss+xml" title={SITE_TITLE} href={new URL('rss.xml', Astro.site)} />
  <link rel="privacy-policy" href="/privacy-policy" />

  <!--  -->
  <meta name="application-name" content={SITE_TITLE} />
  <meta name="apple-mobile-web-app-title" content={SITE_TITLE} />
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
  <meta name="mobile-web-app-capable" content="yes">
  <link rel="icon" type="image/svg+xml" sizes="32x32" href="/favicon-32x32.svg" />
  <link rel="icon" type="image/svg+xml" sizes="16x16" href="/favicon-16x16.svg" />
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
  <link rel="search" type="application/opensearchdescription+xml" title="Marcel Rojas: By Marcel Rojas" href="/opensearch.xml" />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content={SITE_TITLE} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImageURL} />
  <meta property="og:locale" content="en_US" />
  <meta property="og:locale:alternate" content="es_VE" />
  <!-- Twitter / X.com -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:creator" content="@whyismarcel" />
  <meta property="twitter:title" content={title} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={ogImageURL} />

  <meta name="author" content="Marcel Rojas" />
  <meta name="keywords" content="marcelrojas, whyismarcel, Marcel Rojas, Juan Marcel Rojas Hernández, web developer, designer, maketing specialist, software engineering, Venezuela" />

  <script defer src="/script.js"></script>

  <ClientRouter fallback="animate" />

  <Schema />
</head>