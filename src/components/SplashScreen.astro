<style is:inline>
  @layer components {
    #splash-screen {
      display: flex;
      position: fixed;
      inset: 0;
      z-index: 20;
      contain: layout paint;
      content-visibility: auto;
      background-color: black;
      opacity: 1;
      visibility: visible;
      user-select: none;
      touch-action: none;
      cursor: wait;
      overscroll-behavior: contain;
      will-change: allow-discrete, opacity, visibility;
      transition: allow-discrete 0.7s ease-out, opacity 0.7s ease-out, visibility 0.7s ease-out;
      @starting-style {
        display: flex;
        opacity: 1;
        visibility: visible
      }
      &.hidden {
        display: none;
        opacity: 0;
        visibility: hidden
      }
      & svg {
        width: 48px;
        height: 48px;
        margin-top: auto;
        margin-left: auto;
        margin-right: 20px;
        margin-bottom: 20px;
        animation: spinner-rotate 1.2s steps(8, end) infinite
      }
      & rect {
        fill: var(--color-label-primary)
      }
    }
    @keyframes spinner-rotate {
      from {
        transform: rotate(0deg)
      }
      to {
        transform: rotate(360deg)
      }
    }
  }
</style>

